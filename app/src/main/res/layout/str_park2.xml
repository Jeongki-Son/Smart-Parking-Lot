<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="@dimen/m3button_W"
                android:layout_height="@dimen/m3button_H"
                android:id="@+id/button0"
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginRight="@dimen/rightmargin"
                android:layout_gravity="center_vertical"
                android:onClick="event0"
                android:background="@drawable/able" />

            <Button
                android:layout_width="@dimen/m3button_W"
                android:layout_height="@dimen/m3button_H"
                android:id="@+id/button1"
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginRight="@dimen/rightmargin"
                android:layout_gravity="center_vertical"
                android:onClick="event1"
                android:background="@drawable/able"/>

            <Button
                android:layout_width="@dimen/m3button_W"
                android:layout_height="@dimen/m3button_H"
                android:id="@+id/button2"
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginRight="@dimen/rightmargin"
                android:layout_gravity="center_vertical"
                android:onClick="event2"
                android:background="@drawable/grey" />

            <Button
                android:layout_width="@dimen/m3button_W"
                android:layout_height="@dimen/m3button_H"
                android:id="@+id/button3"
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginRight="@dimen/rightmargin"
                android:layout_gravity="center_vertical"
                android:onClick="event3"
                android:background="@drawable/grey" />

            <Button
                android:layout_width="@dimen/m3button_W"
                android:layout_height="@dimen/m3button_H"
                android:id="@+id/button4"
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginRight="@dimen/rightmargin"
                android:layout_gravity="center_vertical"
                android:onClick="event4"
                android:background="@drawable/grey" />

            <Button
                android:layout_width="@dimen/m3button_W"
                android:layout_height="@dimen/m3button_H"
                android:id="@+id/button5"
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginRight="@dimen/rightmargin"
                android:layout_gravity="center_vertical"
                android:onClick="event5"
                android:background="@drawable/grey" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:nestedScrollingEnabled="false"
            android:gravity="center_vertical">

            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_marginLeft="@dimen/m3button_lay_left"
                android:layout_gravity="center_horizontal|left"
                android:id="@+id/button6"
                android:onClick="event6"
                android:background="@drawable/grey" />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|left"
                android:id="@+id/button7"
                android:onClick="event7"
                android:layout_marginLeft="@dimen/m3button_lay_left"
                android:background="@drawable/grey" />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|left"
                android:id="@+id/button8"
                android:onClick="event8"
                android:layout_marginLeft="@dimen/m3button_lay_left"
                android:background="@drawable/grey" />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|left"
                android:id="@+id/button9"
                android:onClick="event9"
                android:layout_marginLeft="@dimen/m3button_lay_left"
                android:background="@drawable/grey" />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|left"
                android:id="@+id/button10"
                android:onClick="event10"
                android:layout_marginLeft="@dimen/m3button_lay_left"
                android:background="@drawable/grey" />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|left"
                android:id="@+id/button11"
                android:onClick="event11"
                android:layout_marginLeft="@dimen/m3button_lay_left"
                android:background="@drawable/grey" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_weight="1">

            />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|right"
                android:id="@+id/button12"
                android:onClick="event12"
                android:layout_marginRight="@dimen/m3button_lay_right"
                android:background="@drawable/grey" />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|right"
                android:id="@+id/button13"
                android:onClick="event13"
                android:layout_marginRight="@dimen/m3button_lay_right"
                android:background="@drawable/grey" />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|right"
                android:id="@+id/button14"
                android:onClick="event14"
                android:layout_marginRight="@dimen/m3button_lay_right"
                android:background="@drawable/grey" />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|right"
                android:id="@+id/button15"
                android:onClick="event16clickevent"
                android:layout_marginRight="@dimen/m3button_lay_right"
                android:background="@drawable/grey" />
            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|right"
                android:id="@+id/button16"
                android:onClick="event16"
                android:layout_marginRight="@dimen/m3button_lay_right"
                android:background="@drawable/grey" />


            <Button
                android:layout_width="@dimen/m3button_H"
                android:layout_height="@dimen/m3button_W"
                android:layout_marginTop="@dimen/topmargin"
                android:layout_marginBottom="@dimen/bottomtmargin"
                android:layout_gravity="center_horizontal|right"
                android:id="@+id/button17"
                android:onClick="event17"
                android:layout_marginRight="@dimen/m3button_lay_right"
                android:background="@drawable/grey" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:id="@+id/button"
            android:layout_gravity="center"
            android:onClick="str1_refresh" />
    </LinearLayout>

</LinearLayout>